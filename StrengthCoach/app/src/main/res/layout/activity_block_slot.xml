<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.strengthcoach.strengthcoach.activities.BlockSlotActivity">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="250dp" android:id="@+id/llCalendar">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/flCalendar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </FrameLayout>
   </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_slot"
        android:id="@+id/tvSelectSlot"
        android:paddingTop="20dp"
        android:layout_below="@+id/llCalendar"
        android:layout_marginTop="47dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/spSelectSlot"
        android:prompt="@string/select_slot"
        android:layout_toRightOf="@+id/tvSelectSlot"
        android:layout_alignTop="@+id/tvSelectSlot" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cart"
        android:paddingTop="20dp"
        android:background="#CCC76F6F"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:id="@+id/bAddToCart"
        android:layout_alignTop="@+id/spSelectSlot"
        android:layout_toRightOf="@+id/spSelectSlot"
        android:layout_toEndOf="@+id/spSelectSlot" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/payment"
        android:paddingTop="20dp"
        android:background="#CCC76F6F"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:id="@+id/bProceedToPayment"
        android:visibility="gone"
        android:layout_below="@+id/bAddToCart"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp" />


</RelativeLayout>