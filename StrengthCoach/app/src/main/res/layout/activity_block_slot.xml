<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.strengthcoach.strengthcoach.activities.BlockSlotActivity">

    <LinearLayout
        android:id="@+id/llToolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <LinearLayout
            android:id="@+id/llCalendar"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <FrameLayout
                android:id="@+id/flCalendar"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"></FrameLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/llCalendar"  android:layout_marginTop="47dp">


            <TextView
                android:id="@+id/tvSelectSlot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/margin_70dp"
                android:text="@string/select_slot" />

            <Spinner
                android:id="@+id/spSelectSlot"
                android:layout_width="150dp"
                android:layout_height="@dimen/margin_42dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/custom_spinner"
                android:spinnerMode="dropdown"
                android:prompt="@string/select_slot"
                android:dropDownVerticalOffset="@dimen/margin_20dp"
                android:layout_alignTop="@+id/tvSelectSlot"
                android:layout_alignLeft="@+id/tvSelectSlot"
                android:layout_alignStart="@+id/tvSelectSlot"
                android:layout_marginRight="@dimen/margin_20dp"
                android:layout_centerInParent="true"/>
            <Button
                android:id="@+id/bAddToCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cart"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_alignBottom="@+id/spSelectSlot"
                android:layout_toRightOf="@+id/spSelectSlot"
                android:layout_toEndOf="@+id/spSelectSlot" />
            <Button
                     android:id="@+id/bProceedToPayment"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentEnd="true"
                     android:layout_alignParentRight="true"
                     android:layout_below="@+id/bAddToCart"
                     android:layout_marginTop="45dp"
                     android:text="@string/next"
                     android:visibility="gone"
                     android:layout_marginRight="@dimen/margin_10dp"/>
        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>