<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent" android:weightSum="5"
    android:background="@color/white">
    <com.strengthcoach.strengthcoach.customui.RobotoTextView
        android:layout_width="@dimen/margin_20dp"
        android:layout_height="@dimen/margin_55dp"
        android:text="@string/sno"
        android:id="@+id/tvSerialNo"
        android:layout_weight="0.46"
        android:layout_marginRight="@dimen/margin_20dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:gravity="center"/>

    <ImageButton
        android:layout_width="@dimen/margin_20dp"
        android:layout_height="@dimen/margin_20dp"
        android:id="@+id/ibDelete"
        android:src="@mipmap/ic_delete"
        android:layout_marginRight="@dimen/margin_20dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_weight="0.04"
        android:background="@color/white_bg"
        android:layout_gravity="center"/>
        />
    <com.strengthcoach.strengthcoach.customui.RobotoTextView
        android:layout_width="90dp"
        android:layout_height="@dimen/margin_55dp"
        android:text="@string/trainer"
        android:id="@+id/tvTrainerName"
        android:layout_weight="1.5"
        android:layout_toRightOf="@+id/ibDelete"
        android:layout_marginRight="@dimen/margin_20dp"
        android:gravity="center"/>
    <com.strengthcoach.strengthcoach.customui.RobotoTextView
        android:layout_width="@dimen/margin_70dp"
        android:layout_height="@dimen/margin_55dp"
        android:text="@string/slot_date"
        android:id="@+id/tvSlotDate"
        android:layout_weight="1.5"
        android:layout_toRightOf="@+id/tvTrainerName"
        android:layout_marginRight="@dimen/margin_20dp"
        android:gravity="center"/>
    <com.strengthcoach.strengthcoach.customui.RobotoTextView
        android:layout_width="@dimen/margin_42dp"
        android:layout_height="@dimen/margin_55dp"
        android:text="@string/slot_time"
        android:id="@+id/tvSlotTime"
        android:layout_weight="0.5"
        android:layout_toRightOf="@+id/tvSlotDate"
        android:layout_marginRight="@dimen/margin_10dp"
        android:gravity="center"/>


</LinearLayout>