<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingTop="@dimen/margin_20dp"
    android:background="@color/white">


    <com.strengthcoach.strengthcoach.customui.RobotoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/priceperhour"
        android:id="@+id/tvNoOfSlots"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tvFooterTotalAmt"
        android:layout_alignEnd="@+id/tvFooterTotalAmt"
        android:paddingTop="@dimen/margin_20dp"
        android:textSize="18sp"
        android:textColor="@color/dark_grey"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:paddingBottom="@dimen/margin_20dp"
        android:gravity="center_vertical|center_horizontal" />

    <com.strengthcoach.strengthcoach.customui.RobotoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/total"
        android:id="@+id/tvFooterTotalAmt"
        android:textSize="18sp"
        android:textColor="@color/dark_grey"
        android:layout_below="@+id/tvNoOfSlots"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingBottom="@dimen/margin_20dp"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvCanvas"
        android:background="@drawable/rectangle_drawable"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/tvFooterTotalAmt" />
</RelativeLayout>