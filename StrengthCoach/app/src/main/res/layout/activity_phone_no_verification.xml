<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.strengthcoach.strengthcoach.activities.PhoneNoVerificationActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <com.strengthcoach.strengthcoach.customui.RobotoTextView android:text="@string/phone_verification_text" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_90dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:id="@+id/verificationText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.strengthcoach.strengthcoach.customui.RobotoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verification_code"
        android:id="@+id/tvVerificationCode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/verificationText"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/margin_20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="4"
        android:maxLength="4"
        android:id="@+id/etVerificationCode"
        android:layout_below="@+id/verificationText"
        android:layout_toRightOf="@+id/tvVerificationCode"
        android:layout_toEndOf="@+id/tvVerificationCode"
        android:layout_marginRight="@dimen/margin_20dp"
        android:background="@drawable/custom_edit_text"
        android:textCursorDrawable="@drawable/cursor_color"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verify_button_text"
        android:id="@+id/bVerify"
        android:layout_toRightOf="@+id/etVerificationCode"
        android:layout_below="@+id/verificationText" />

   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/regenerate_code_underline"
        android:id="@+id/bRegenerateCode"
       android:layout_marginTop="@dimen/margin_20dp"
        android:clickable="true"
       android:onClick="callRegenerateCode"
        android:textColor="@color/hyperlinkColor"
       android:layout_below="@+id/etVerificationCode"
       android:layout_alignLeft="@+id/etVerificationCode"
       android:layout_alignStart="@+id/etVerificationCode" />
</RelativeLayout>
