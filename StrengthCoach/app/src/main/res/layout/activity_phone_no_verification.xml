<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.strengthcoach.strengthcoach.activities.PhoneNoVerificationActivity">

    <TextView android:text="@string/phone_verification_text" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="111dp"
        android:id="@+id/verificationText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verification_code"
        android:id="@+id/tvVerificationCode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/verificationText"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etVerificationCode"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tvVerificationCode"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verify_button_text"
        android:id="@+id/bVerify"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/verificationText"
        android:layout_alignRight="@+id/verificationText"
        android:layout_alignEnd="@+id/verificationText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verify_button_text"
        android:id="@+id/bRegenerateCode"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/bVerify"
        android:layout_alignRight="@+id/bVerify"
        android:layout_alignEnd="@+id/bVerify" />


</RelativeLayout>
